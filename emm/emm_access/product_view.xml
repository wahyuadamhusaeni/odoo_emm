<?xml version="1.0" encoding="utf8"?>
<openerp>
    <data>
        <record id="product_price_currency_form_view_emm" model="ir.ui.view">
            <field name="name">product_price_currency.normal_form_view.emm</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product_price_currency.product_price_currency_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_list_price']/.." position="attributes">
                    <attribute name="groups">base.group_sale_manager,base.group_sale_salesman,base.group_sale_salesman_all_leads,account.group_account_invoice,account.group_account_user,account.group_account_manager</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_product_tree_view_emm" model="ir.ui.view">
            <field name="name">product.product.tree.emm</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="lst_price" position="attributes">
                    <attribute name="groups">base.group_sale_manager,base.group_sale_salesman,base.group_sale_salesman_all_leads,account.group_account_invoice,account.group_account_user,account.group_account_manager</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
