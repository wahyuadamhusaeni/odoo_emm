<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_purchase_requisition_form_via_enh" model="ir.ui.view">
            <field name="name">purchase.requisition.form.via.enh</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='line_ids']/tree/field[@name='product_uom_id']" position="after">
                    <field name="notes"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='line_ids']//field[@name='company_id']" position="after">
                    <newline/>
                    <separator string="Notes" colspan="4"/>
                    <field name="notes" colspan="4" nolabel="1"/>
                </xpath>
                <field name="name" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="required">0</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
