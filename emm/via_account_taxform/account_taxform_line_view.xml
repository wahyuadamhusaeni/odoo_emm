<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Tax Form Line -->
        <record id="view_taxline_form" model="ir.ui.view">
            <field name="name">Tax Line</field>
            <field name="model">account.taxform.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Tax Line">
                    <group col="2" colspan="4">
                        <field name="line_desc" />
                        <field name="product_id" />
                        <field name="name" />
                        <field name="price_unit_base" />
                        <field name="quantity" />
                        <field name="discount" />
                        <field name="uom" />
                        <field name="amount_base" />
                        <field name="price_subtotal" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_taxline_tree" model="ir.ui.view">
            <field name="name">Tax Line</field>
            <field name="model">account.taxform.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Tax Line">
                    <field name="line_desc" />
                    <field name="price_unit_base" />
                    <field name="discount" />
                    <field name="quantity" />
                    <field name="amount_base" />
                    <field name="price_subtotal" />
                </tree>
            </field>
        </record>
    </data>
</openerp>
