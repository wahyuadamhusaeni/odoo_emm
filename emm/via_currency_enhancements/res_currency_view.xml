<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="via_res_currency_form_enhanced" model="ir.ui.view">
            <field name="name">Currency Enhanced Form View</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Display']" position="inside">
                    <field name="full_name"/>
                    <field name="fraction_name"/>
                    <field name="display_fraction"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
