<?xml version="1.0"?>
<openerp>
    <data>
        <record id="base_add_rev_history_form_view" model="ir.ui.view">
            <field name="name">Sale Order Add Revision History Base Form View</field>
            <field name="model">add.rev.history</field>
            <field name="arch" type="xml">
                <form string="Revision History" version="7.0">
                    <group col="6">
                        <group>
                            <field name="order_id" invisible="1"/>
                            <field name="rev_num" readonly="1"/>
                        </group>
                        <group>
                            <field name="by_uid"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Please enter your notes here..."/>
                    <footer>
                        <button name="add_button_revision" string="Add" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_add_rev_history" model="ir.actions.act_window">
            <field name="name">Add Revision Note</field>
            <field name="res_model">add.rev.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
