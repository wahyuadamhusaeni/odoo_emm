<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="claim_picking_move_memory_tree" model="ir.ui.view">
            <field name="name">claim.picking.move.memory.tree</field>
            <field name="model">claim.picking.move.memory</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Product Moves">
                    <field name="product_id" />
                    <field name="prodlot_id" groups="stock.group_production_lot"/>
                    <field name="quantity" />
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>

        <record id="claim_picking_move_memory_form" model="ir.ui.view">
            <field name="name">claim.picking.move.memory.form</field>
            <field name="model">claim.picking.move.memory</field>
            <field name="arch" type="xml">
                <form string="Return Picking Memory" version="7.0">
                    <group col="4">
                        <field name="product_id" />
                        <field name="prodlot_id" groups="stock.group_production_lot"/>
                        <label for="quantity"/>
                        <div>
                            <field name="quantity" class="oe_inline" nolabel="1"/>
                            <field name="uom_id" class="oe_inline" nolabel="1"/>
                        </div>
                    </group>
                 </form>
            </field>
        </record>

        <record id="view_claim_picking" model="ir.ui.view">
            <field name="name">claim_picking</field>
            <field name="model">claim.create.picking</field>
            <field name="arch" type="xml">
                <form string="Select exchange lines to add in picking" version="7.0">
                    <field name="source_location" invisible="context.get('product_return', False)"/>
                    <field name="dest_location"/>
                    <label for="product_return_moves" string="Select Lines for Picking"/>
                    <field name="product_return_moves" nolabel="1" class="oe_no_button"/>
                    <footer>
                        <button name="action_create_picking" string="Create picking" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_claim_picking_in" model="ir.actions.act_window">
            <field name="name">Return Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">claim.create.picking</field>
            <field name="src_model">crm.claim</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'picking_type': 'in','product_return': True}</field>
        </record>

        <record id="action_claim_picking_out" model="ir.actions.act_window">
            <field name="name">Create Outgoing Shipments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">claim.create.picking</field>
            <field name="src_model">crm.claim</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'picking_type': 'out'}</field>
        </record>
    </data>
</openerp>
