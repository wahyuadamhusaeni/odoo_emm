<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_view_enhancements_via_2" model="ir.ui.view">
            <field name="name">product.view.enhancements.via.2</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_normal_procurement_locations_form"/>
            <field name="arch" type="xml">
                <field name="virtual_available" position="after">
                    <field name="limit_delivery"/>
                    <field name="limit_qty" attrs="{'invisible':[('limit_delivery','!=','fix_qty')]}"/>
                    <label for="limit_percentage" attrs="{'invisible':[('limit_delivery','!=','percentage')]}"/>
                    <div attrs="{'invisible':[('limit_delivery','!=','percentage')]}">
                        <field name="limit_percentage" class="oe_inline"/> %%
                    </div>
                </field>
            </field>
        </record>

    </data>
</openerp>