<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Location Area Form View -->

        <record id="view_location_area_form" model="ir.ui.view">
            <field name="name">view.location.area.form</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="usage" position="after">
                    <field name="usage_type" attrs="{'invisible':[('usage','not in',('internal'))]}"/>
                </field>
            </field>
        </record>

        <!-- Internal Moves Service Tree View -->

        <record id="view_stock_picking_service" model="ir.ui.view">
            <field name="name">stock.picking.service.tree</field>
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';grey:state == 'cancel';red:state not in ('cancel', 'done') and date &lt; current_date" string="Picking list">
                    <field name="name"/>
                    <field name="backorder_id"/>
                    <field name="origin"/>
                    <field name="date"/>
                    <field name="min_date"/>
                    <field name="invoice_state"/>
                    <field name="stock_journal_id" widget="selection"/>
                    <field name="state"/>
                    <field name="picking_svc_type"/>
                </tree>
            </field>
        </record>

        <!-- Internal Moves Service Request Action -->

        <act_window id="stock_picking_service_action"
            name="SR Internal Moves"
            res_model="stock.picking"
            view_id="view_stock_picking_service"
            view_type="form"
            view_mode="tree,form"
            domain="[('type','=','internal'),('picking_svc_type','in',['request','pickup','consume','return'])]"/>

        <menuitem action="stock_picking_service_action" id="menu_stock_picking_service" parent="stock.menu_stock_warehouse_mgmt"/>

