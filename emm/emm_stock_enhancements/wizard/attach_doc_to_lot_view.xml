<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Lot Revaluation Wizard -->
        <record model="ir.ui.view" id="view_attach_doc_to_lot_from">
            <field name="name">attach.doc.to.lot.form</field>
            <field name="model">attach.doc.to.lot</field>
            <field name="arch" type="xml">
                <form string="Attach Document" version="7.0">
                    <field name="attachment" widget="many2many_binary"/>
                    <footer>
                        <button name="execute" string="Attach" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action of the Lot Revaluation Wizard -->
        <record id="attach_doc_to_lot_action" model="ir.actions.act_window">
            <field name="name">Attach Document</field>
            <field name="res_model">attach.doc.to.lot</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_attach_doc_to_lot_from"/>
        </record>

        <record id="view_stock_move_via_attachment_poc" model="ir.ui.view">
            <field name="name">stock.move.via.attachment.poc</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <button name="%(attach_doc_to_lot_action)d" type="action" icon="gtk-execute" string="Attach file"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
