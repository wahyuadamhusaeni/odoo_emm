<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_stock_production_lot_print_barcode_form" model="ir.ui.view">
            <field name="name">stock.production.lot.print.barcode.form</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/div/button[@string='Upstream Traceability']" position="before">
                    <button name="print_serial_barcode" string="Print Barcode" type="object"/>
                </xpath>
            </field>
        </record>

        <record id="view_stock_picking_in_print_barcode_form" model="ir.ui.view">
            <field name="name">stock.picking.in.print.barcode.form</field>
            <field name="model">stock.picking.in</field>
            <field name="inherit_id" ref="stock.view_picking_in_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/h1" position="before">
                    <div class="oe_button_box oe_right">
                        <button name="print_serial_barcode" string="Print Barcode" type="object"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
